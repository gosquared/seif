{
  "name": "crossgrade",
  "description": "GoSquared 4.0 upgrade pre-requisite, Paypal to Recurly upgrade",
  "tags": ["ruby", "1.9.3"],
  "active": "true",
  "repository": {
    "url": "git@github.com/gosquared/ruby",
    "type": "git",
    "subdir": "crossgrade"
  },
  "shell_profile": {
    "RACK_ENV": "production",
    "APP_ENV": "production"
  },
  "web_server": [
    {
      "domains": "crossgrade.gosquared.com crossgrade.gosquared.com.local",
      "ports": ["80", "443"],
      "public_path": "app/public",
      "nginx": {
        "custom_directives": [
          "rewrite ^/account/upgrade/?$ /account/upgrade.html break;"
        ],
        "locations": [
          {
            "path": "/",
            "directives": [
              "proxy_pass http://crossgrade_ssl;"
            ]
          }
        ]
      }
    }
  ],
  "jenkins": "rake && deliver -V",
  "custom": {
    "tcp_socket": 5015,
    "unix_socket": "/tmp/crossgrade.sock",
    "pid": "/var/run/crossgrade.pid"
  }
}
