{
  "name": "crossgrade",
  "description": "GoSquared 4.0 upgrade pre-requisite, Paypal to Recurly upgrade",
  "tags": ["ruby", "1.9.3"],
  "repository": {
    "url": "git@github.com/gosquared/ruby",
    "type": "git",
    "subdir": "crossgrade"
  },
  "shell_profile": {
    "RACK_ENV": "production",
    "APP_ENV": "production"
  },
  "tcp_socket": 5015,
  "unix_socket": "/tmp/crossgrade.sock",
  "instances": [
    "unix", // this means local unix socket
    "ruby-1",
    "ruby-2"
  ],
  "web_server": [
    {
      "domains": "crossgrade.gosquared.com crossgrade.gosquared.com.local",
      "ports": [80, 443, 8443],
      "public_path": "app/public",
      "upstreams": [
        "unix:/tmp/crossgrade.sock",
        "ruby-1:5015",
        "ruby-2:5015"
      ],
      "nginx": {
        "crossgrade_80": {
          "listen": [80],
          "server_name": "crossgrade.gosquared.com crossgrade.gosquared.com.local",
          "public_path": "app/public",
          "custom_directives": [
            "return 301 https://$host$request_uri;"
          ]
        },
        "crossgrade_443": {
          "listen": [443],
          "server_name": "crossgrade.gosquared.com crossgrade.gosquared.com.local",
          "public_path": "app/public",
          "locations": [
            {
              "path": "/",
              "directives": [
                "proxy_pass http://crossgrade_upstream;"
              ]
            }
          ],
          "custom_directives": [
            "ssl on;"
          ]
        },
        "crossgrade_8443": {
          "listen": [8443],
          "server_name": "crossgrade.gosquared.com crossgrade.gosquared.com.local",
          "public_path": "app/public",
          "locations": [
            {
              "path": "/",
              "directives": [
                "proxy_pass http://crossgrade_upstream;"
              ]
            }
          ]
        }
      }
    }
  ],
  "jenkins": "rake && deliver -V"
}
